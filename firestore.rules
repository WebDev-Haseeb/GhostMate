rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Daily IDs collection - read-only for checking collisions
    // Only allow reads for authenticated users
    match /dailyIds/{dailyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User Favorites - authenticated users can read any favorites (for mutual detection)
    // but can only write their own
    match /userFavorites/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Connections - users can read connections they're part of
    match /connections/{connectionId} {
      allow read: if request.auth != null && 
        (connectionId.matches('.*' + request.auth.uid + '.*'));
      allow write: if request.auth != null && 
        (connectionId.matches('.*' + request.auth.uid + '.*'));
    }
    
    // Daily Connection Checks - users can read/write checks they're part of
    match /dailyConnectionChecks/{checkId} {
      allow read: if request.auth != null && 
        (checkId.matches('.*' + request.auth.uid + '.*'));
      allow write: if request.auth != null && 
        (checkId.matches('.*' + request.auth.uid + '.*'));
    }
    
    // Chat Limits - users can only read/write their own limits
    match /chatLimits/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Note: Admin authentication is handled via session cookies, not Firestore
    // No admin collection needed - credentials stored in .env
    
    // User Highlights - authenticated users can read any highlights (to detect mutual)
    // but can only write their own
    match /highlights/{userId}/messages/{messageId} {
      allow read: if request.auth != null;  // Any authenticated user can read
      allow write: if request.auth != null && request.auth.uid == userId;  // Only write own
    }
    
    // Queued Stories - users can create, admin app handles approve/reject
    match /queuedStories/{storyId} {
      allow read: if request.auth != null;  // Any authenticated user can read (needed for lock status)
      allow create: if request.auth != null;  // Users can create when both highlight
      allow update, delete: if request.auth != null;  // Admin operations (protected by secret admin panel)
    }
    
    // Approved Stories - public read, admin app handles creation
    match /approvedStories/{storyId} {
      allow read: if request.auth != null;  // Any authenticated user can view
      allow write: if request.auth != null;  // Admin operations (protected by secret admin panel)
    }
    
    // Presence - users can read all (to see who's online) but only write their own
    match /presence/{userId} {
      allow read: if request.auth != null;  // Any authenticated user can see who's online
      allow write: if request.auth != null && request.auth.uid == userId;  // Only write own presence
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

